<Window x:Class="LonelyTreeTimeLimits.NewCustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewCustomerDialog" Height="506.464" Width="327.463" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="FirstNameTxtbox" HorizontalAlignment="Left" Height="23" Margin="33,40,0,0" TextWrapping="Wrap" Text="First name" VerticalAlignment="Top" Width="98"/>
        <ComboBox HorizontalAlignment="Left" Margin="172,40,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0">
            <ListBoxItem Content="Type"/>
            <ListBoxItem Content="Bureau"/>
            <ListBoxItem Content="Private Person"/>
        </ComboBox>
        <TextBox x:Name="LastNameTxtbox" HorizontalAlignment="Left" Height="23" Margin="33,83,0,0" TextWrapping="Wrap" Text="Last name" VerticalAlignment="Top" Width="98"/>
        <TextBox x:Name="CountryTextBox" HorizontalAlignment="Left" Height="23" Margin="33,161,0,0" TextWrapping="Wrap" Text="Country" VerticalAlignment="Top" Width="102" RenderTransformOrigin="0.158,-0.217"/>
        <TextBox x:Name="EmailTxtBox" HorizontalAlignment="Left" Height="23" Margin="172,83,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="120"/>
        <RadioButton x:Name="MaleGenderRadioBtn" Content="Male" HorizontalAlignment="Left" Margin="33,111,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.667,-0.75"/>
        <RadioButton x:Name="FemaleRadioBtn" Content="Female" HorizontalAlignment="Left" Margin="98,111,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="CustomerDatePicker" HorizontalAlignment="Left" Margin="33,132,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PhoneTextBox" HorizontalAlignment="Left" Height="23" Margin="172,111,0,0" TextWrapping="Wrap" Text="Phone" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="SkypeTxtBox" HorizontalAlignment="Left" Height="23" Margin="172,139,0,0" TextWrapping="Wrap" Text="skype name" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="CommentTextBox" HorizontalAlignment="Left" Height="215" Margin="33,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Label Content="Kommentar" HorizontalAlignment="Left" Margin="33,201,0,0" VerticalAlignment="Top"/>
        <Button Content="create" HorizontalAlignment="Left" Margin="208,452,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label x:Name="FormFillErrorTxtbox" Content="" HorizontalAlignment="Left" Margin="172,167,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.591,0.017" Width="120"/>

    </Grid>
</Window>
